<!DOCTYPE html>
<html>
<head>
	<title>投稿一覧</title>
</head>
<body>
  <h1>Books</h1>

  <table>
  	<thead>
  		<tr>
  			<th>Title</th>
  			<th>Body</th>
  			<th colspan="3"></th>
  			<th></th>
  			<th></th>
  		</tr>
    </thead>
  	<tbody>
  		<% @books.each do |book| %>
	  		<tr>
	  			<td ><%= book.title %></td>
	  			<td ><%= book.body %></td>
	  			<td ><%= link_to "show", book_path(book.id), class: "show_#{book.id}" %></td>
	  			<td ><%= link_to "Edit", edit_book_path(book.id), class: "edit_#{book.id}" %></td>
	  			<td ><%= link_to "Destroy", book_path(book.id), class: "destroy_#{book.id}", method: :delete %></td>
	  		</tr>
		<% end %>

  	</tbody>
  </table>

  <h1>New book</h1>
  <!-- form_for部分 -->
  <%= form_for(@book) do |f| %>
      <div>
        <h4>Title</h4>
        <%= f.text_field :title, class: "book_title" %>
      </div>
      <div>
        <h4>Body</h4>
        <%= f.text_area :body, class: "book_body" %>
      </div>
      <div>
        <%= f.submit 'CreateBook' %>
      </div>
  <% end %>

</body>
</html>
